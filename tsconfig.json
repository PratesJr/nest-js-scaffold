{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@lib/cache": [
        "libs/cache/src"
      ],
      "@lib/cache/*": [
        "libs/cache/src/*"
      ],
      "@api-module/auth": [
        "src/module/auth"
      ],
      "@api-module/auth/*": [
        "src/module/auth/*"
      ],
      "@api-module/user": [
        "src/module/user"
      ],
      "@api-module/user/*": [
        "src/module/user/*"
      ],
      "@helper": [
        "src/helper"
      ],
      "@helper/*": [
        "src/helper/*"
      ],
      "@database": [
        "src/database"
      ],
      "@database/*": [
        "src/database/*"
      ],
      "@entity/*": [
        "src/database/entity/*"
      ],
      "@dto/*": [
        "src/types/*"
      ],
      "@app/database": [
        "libs/database/src"
      ],
      "@app/database/*": [
        "libs/database/src/*"
      ],
      "@app/mocks/*": [
        "src/mock/*"
      ]
    }
  }
}