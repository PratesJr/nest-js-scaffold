{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "modulePathIgnorePatterns": [
    "<rootDir>/../../dist/",
    "<rootDir>/../../src/types",
    "<rootDir>/../../src/database/"
  ],
  "coveragePathIgnorePatterns": [
    "node_modules",
    "test-config",
    "types",
    "database",
    ".module.ts",
    "<rootDir>/src/app/main.ts",
    ".mock.ts",
    "dto"
  ],
  "moduleNameMapper": {
    "@lib/cache/(.*)": "<rootDir>/../libs/cache/src/$1",
    "@lib/cache": "<rootDir>/../libs/cache/src",
    "@api-module/auth/(.*)": "<rootDir>../src/module/auth/$1",
    "@api-module/auth": "<rootDir>../src/module/auth",
    "@api-module/user(.*)": "<rootDir>../src/module/user/$1",
    "@api-module/user": "<rootDir>../src/module/user",
    "@helper(.*)": "<rootDir>../src/helper/$1",
    "@helper": "<rootDir>../src/helper",
    "@database(.*)": "<rootDir>src/database/$1",
    "@entity(.*)": "<rootDir>../src/database/entity/$1",
    "@dto(.*)": "<rootDir>../src/types/$1",
    "@app/database/(.*)": "<rootDir>/../libs/database/src/$1",
    "@app/database": "<rootDir>/../libs/database/src",
    "@app/mocks": "<rootDir>../src/mock/$1"
  }
}